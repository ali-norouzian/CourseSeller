@using CourseSeller.Core.Convertors
@model (List<CourseSeller.DataLayer.Entities.Courses.Comment>,int)

@{
    Layout = null;
}

@foreach (var item in Model.Item1)
{
    <!-- row -->
    <div class="comment-row">
        <img src="/UserAvatars/@item.User.UserAvatar">
        <div class="left-col">
            <h3> @item.User.UserName </h3>
            <span>@item.CreateDateTime.ToShamsiWithClock()</span>
            <p>
                @item.Content
            </p>
        </div>
    </div>
    <!-- /row -->
}

<nav aria-label="Page navigation">
    <ul class="pagination justify-content-center">

        @for (int i = 1; i <= Model.Item2; i++)
        {
            <li class="page-item"><a class="page-link" onclick="pageComment(@i)">@i</a></li>
        }

    </ul>
</nav>
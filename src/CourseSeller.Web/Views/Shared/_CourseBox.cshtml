@model CourseSeller.Core.DTOs.Course.ShowCourseForListViewModel

<div class="col-lg-3 col-md-4 col-sm-6 col-xs-12 term-col">
    <article>
        <a href="" class="img-layer"><img height="150" width="150" src="/Courses/Thumb/@Model.ImageName"></a>
        <h2><a asp-controller="Course" asp-action="ShowCourse" asp-route-courseId="@Model.CourseId"> @Model.Title </a></h2>
        <span> @(Model.Price == 0 ? "رایگان" : @Model.Price.ToString("#,0")) </span>
        <i>@Model.TotalTime</i>
    </article>
</div>
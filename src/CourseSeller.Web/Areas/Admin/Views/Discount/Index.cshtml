@using CourseSeller.Core.Convertors
@model List<CourseSeller.DataLayer.Entities.Orders.Discount>
@{
    ViewData["Title"] = "لیست کد ها";
}

<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">لیست کد ها</h1>
    </div>
    <!-- /.col-lg-12 -->
</div>

<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                لیست کد های تخفیف
            </div>
            <!-- /.panel-heading -->
            <div class="panel-body">
                <div class="table-responsive">
                    <div id="dataTables-example_wrapper" class="dataTables_wrapper form-inline" role="grid">
                        <div class="col-md-12" style="margin: 10px 0;">

                            <a asp-controller="Discount" asp-action="CreateDisount" class="btn btn-outline btn-success">افزودن کد جدید</a>

                        </div>
                        <table class="table table-striped table-bordered table-hover dataTable no-footer" id="dataTables-example" aria-describedby="dataTables-example_info">
                            <thead>
                                <tr>
                                    <th>کد</th>
                                    <th>تعداد</th>
                                    <th>تاریخ شروع</th>
                                    <th>تاریخ پایان</th>
                                    <th>دستورات</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var code in Model)
                                {
                                    <tr>
                                        <td>@code.Code</td>
                                        <td>@code.UsableCount</td>
                                        <td>@((code.StartDateTime != null) ? code.StartDateTime.Value.ToShamsi() : "")</td>
                                        <td>@((code.EndDateTime != null) ? code.EndDateTime.Value.ToShamsi() : "")</td>

                                        <td>
                                            <a asp-action="UpdateDisount" asp-route-discountId="@code.DiscountId" class="btn btn-warning btn-sm">
                                                ویرایش
                                            </a>

                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>

            </div>
            <!-- /.panel-body -->
        </div>
        <!-- /.panel -->
    </div>
    <!-- /.col-lg-12 -->
</div>
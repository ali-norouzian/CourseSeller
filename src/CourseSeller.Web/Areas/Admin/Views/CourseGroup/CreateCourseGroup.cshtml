@model CourseSeller.DataLayer.Entities.Courses.CourseGroup
@{
    ViewData["Title"] = "افزودن گروه جدید";
}


<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">افزودن گروه جدید</h1>
    </div>
    <!-- /.col-lg-12 -->
</div>

<div class="row">
    <form method="post" enctype="multipart/form-data">
        <input type="hidden" asp-for="ParentId"/>
        @if (ViewData["GroupId"] != null)
        {
            <input type="hidden" asp-for="GroupId" />
        }
        <div class="col-md-12">
            <div class="panel panel-primary">
                <div class="panel-heading">
                    گروه جدید
                </div>
                <!-- /.panel-heading -->
                <div class="panel-body">
                    <div class="form-group">
                        <label>عنوان گروه</label>
                        @if (ViewData["GroupTitle"]!=null)
                        {
                            
                            var GroupTitle = @ViewData["GroupTitle"] as string;

                            <input type="text" name="GroupTitle" value="@GroupTitle" class="form-control">
                        }
                        else
                        {
                            <input type="text" asp-for="GroupTitle" class="form-control">
                        }
                    </div>
                    <span asp-validation-for="GroupTitle"></span>
                    <input type="submit" value="ذخیره اطلاعات" class="btn btn-success" />
                </div>
                <!-- /.panel-body -->
            </div>
        </div>
  
    </form>
</div>
@model CourseSeller.Core.DTOs.UserPanel.ChangePasswordViewModel
@{
    ViewData["Title"] = "تغییر رمز عبور";
}

<partial name="_AddressBarStart" />
تغییر رمز عبور
<partial name="_AddressBarFinish" />


<main>
    <div class="container">
        <div class="user-account">
            <div class="row">

                <partial name="_SideBar" model="null" />

                <div class="col-md-9 col-sm-8 col-xs-12">
                    <section class="user-account-content">
                        <header><h1> تغییر رمز عبور </h1></header>
                        <div class="inner form-layer">
                            <form asp-action="ChangePassword" method="post">
                                @if (ViewData["IsSuccess"] != null)
                                {
                                    <div class="alert alert-success">
                                        تغییر رمز عبور شما با موفقیت ویرایش شد.
                                    </div>
                                }

                                <div class="row">
                                    <style>
                                        .margin-bot {
                                            margin-bottom: 5%;
                                        }
                                    </style>
                                    <div class="col-md-7 col-sm-8 col-xs-12">
                                        <div class="input-group">
                                            <span class="input-group-addon" id="oldpassword"><i class="zmdi zmdi-key"></i></span>
                                            <input asp-for="OldPassword" type="password" class="form-control" placeholder="کلمه عبور فعلی" aria-describedby="oldpassword">
                                        </div>
                                        <span asp-validation-for="OldPassword" class="text-danger margin-bot"></span>

                                    </div>
                                    <div class="col-md-7 col-sm-8 col-xs-12">
                                        <div class="input-group">
                                            <span class="input-group-addon" id="password"><i class="zmdi zmdi-key"></i></span>
                                            <input asp-for="Password" type="password" class="form-control" placeholder="کلمه عبور فعلی جدید" aria-describedby="password">
                                        </div>
                                        <span asp-validation-for="Password" class="text-danger margin-bot"></span>

                                    </div>
                                    <div class="col-md-7 col-sm-8 col-xs-12">
                                        <div class="input-group">
                                            <span class="input-group-addon" id="repassword"><i class="zmdi zmdi-key"></i></span>
                                            <input asp-for="RePassword" type="password" class="form-control" placeholder="تکرار کلمه عبور جدید" aria-describedby="repassword">
                                        </div>
                                        <span asp-validation-for="RePassword" class="text-danger margin-bot"></span>

                                    </div>

                                    <div class="col-md-7 col-sm-8 col-xs-12">
                                        <button class="btn btn-success"> تغییر رمز عبور </button>
                                    </div>
                                </div>

                            </form>
                        </div>
                    </section>
                </div>
            </div>
        </div>
    </div>
</main>


@section Scripts
{
    <partial name="_ValidationScriptsPartial" />
}